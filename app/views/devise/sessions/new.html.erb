<div class="body">
  <h2 class="title">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, class: "label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-fields" %>
    </div>

    <div class="field">
      <%= f.label :password, class: "label" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "input-fields" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field row">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: "purple-btn" %>
    </div>
  <% end %>

  <span class="devise-links"><%= render "devise/shared/links" %></span>
</div>