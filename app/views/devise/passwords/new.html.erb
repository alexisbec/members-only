<div class="body">
  <h2 class="title">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email, class: "label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-fields" %>
    </div>

    <div class="actions">
      <%= f.submit "Send me reset password instructions", class: "purple-btn" %>
    </div>
  <% end %>

  <span class="devise-links"><%= render "devise/shared/links" %></span>
</div>
